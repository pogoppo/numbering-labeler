{
  "extends": "@tsconfig/svelte/tsconfig.json",

  "include": ["src/**/*"],
  "exclude": ["node_modules/*", "__sapper__/*", "public/*"],

  "compilerOptions": {
    "target": "es2020",
    "module": "es2020",
    "baseUrl": "./",
    "paths": {
      "~/*": ["src/*"]
    },
    "types": ["jest"],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
  }
}